<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"> 
  <id>release</id> 
  <formats> 
    <format>tar.gz</format> 
  </formats> 
  <includeBaseDirectory>false</includeBaseDirectory> 
  <fileSets> 
        <fileSet> 
          <includes> 
            <include>README*</include> 
            <include>LICENSE*</include> 
          </includes> 
        </fileSet> 
	    <fileSet>
	      <directory>sensei-core/target</directory>
	      <outputDirectory>/</outputDirectory>
	      <includes>
	        <include>*.jar</include>
	      </includes>
	    </fileSet>
	    <fileSet>
	      <directory>example/hadoop-indexing/target</directory>
	      <outputDirectory>/example/hadoop-indexing</outputDirectory>
	      <includes>
	        <include>*.jar</include>
	      </includes>
	    </fileSet>
	    <fileSet>
	      <directory>example/hadoop-indexing/conf</directory>
	      <outputDirectory>/example/hadoop-indexing/conf</outputDirectory>
	      <includes>
	        <include>**/*</include>
	      </includes>
	    </fileSet>
	    <fileSet>
	      <directory>./</directory>
	      <outputDirectory>./</outputDirectory>
	      <includes>
	        <include>bin/**/*</include>
	        <include>conf/**/*</include>
	        <include>client-conf/**/*</include>
	        <include>data/**/*</include>
	        <include>apps/**/*</include>
	        <include>protobuf/**/*</include>
	        <include>resources/**/*</include>
	      </includes>
	    </fileSet>
  </fileSets> 
  <moduleSets> 
    <moduleSet> 
      <includes> 
        <include>com.senseidb:sensei-core</include> 
        <include>com.senseidb:sensei-hadoop-indexing</include>
        <include>com.senseidb:sensei-example</include> 
      </includes> 
      <binaries> 
        <includeDependencies>true</includeDependencies> 
        <unpack>false</unpack> 
        <dependencySets> 
          <dependencySet> 
            <scope>runtime</scope> 
            <outputDirectory>lib</outputDirectory> 
          </dependencySet> 
        </dependencySets> 
      </binaries> 
    </moduleSet> 
  </moduleSets> 
</assembly> 
